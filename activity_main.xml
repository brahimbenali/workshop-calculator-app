<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/result"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="0dp"
            android:text=""
            android:padding="10dp"
            android:textSize="90dp"
            android:textColor="@color/white"/>
        <LinearLayout
            android:id="@+id/first_line_op"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/result">
            <Button
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/grey"
                android:text="AC"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/sign"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/grey"
                android:text="+/-"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/delete"/>
            <Button
                android:id="@+id/percent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/grey"
                android:text="%"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/sign" />
            <Button
                android:id="@+id/division"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_orange"
                android:text="÷"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/percent"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_line_op"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/first_line_op">
            <Button
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_grey"
                android:textColor="@color/white"
                android:text="7"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_grey"
                android:text="8"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/seven"/>
            <Button
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_grey"
                android:text="9"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/eight" />
            <Button
                android:id="@+id/multiply"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_orange"
                android:text="x"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/nine"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_line_op"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/second_line_op">
            <Button
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="@color/dark_grey"
                android:text="4"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_grey"
                android:text="5"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/four"/>
            <Button
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="@color/dark_grey"
                android:text="6"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/five" />
            <Button
                android:id="@+id/sub"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_orange"
                android:text="−"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/six"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourth_line_op"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/third_line_op">
            <Button
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_grey"
                android:textColor="@color/white"
                android:text="3"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_grey"
                android:text="2"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/three"/>
            <Button
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_grey"
                android:text="1"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/two" />
            <Button
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_orange"
                android:text="+"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/one"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifth_line_op"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/fourth_line_op">
            <Button
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="@color/dark_grey"
                android:text="0"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/equal"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/dark_orange"
                android:text="="
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/zero" />
        </LinearLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
