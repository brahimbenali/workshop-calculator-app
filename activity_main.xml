<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout>
        <TextView
            <!--here you can control the text and set positions and colors and size-->
            android:id="@+id/result" />
        <LinearLayout
        <!--here you can control the line and set position -->
            android:id="@+id/first_line_op">
            <Button
        <!--here you can control the buttons and set positions and colors and size-->
                android:id="@+id/delete"
                android:text="AC"/>
            <Button
                android:id="@+id/sign"
                android:text="+/-" />
            <Button
                android:id="@+id/percent"
                android:text="%" />
            <Button
                android:id="@+id/division"
                android:text="÷"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_line_op">
            <Button
                android:id="@+id/seven"
                android:text="7" />
            <Button
                android:id="@+id/eight"
                android:text="8" />
            <Button
                android:id="@+id/nine"
                android:text="9" />
            <Button
                android:id="@+id/multiply"
                android:text="x" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_line_op">
            <Button
                android:id="@+id/four"
                android:text="4" />
            <Button
                android:id="@+id/five"
                android:text="5" />
            <Button
                android:id="@+id/six"
                android:text="6" />
            <Button
                android:id="@+id/sub"
                android:text="−" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourth_line_op">
            <Button
                android:id="@+id/three"
                android:text="3" />
            <Button
                android:id="@+id/two"
                android:text="2" />
            <Button
                android:id="@+id/one"
                android:text="1" />
            <Button
                android:id="@+id/add"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifth_line_op" >
            <Button
                android:id="@+id/zero"
                android:text="0" />
            <Button
                android:id="@+id/equal"
                android:text="=" />
        </LinearLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>